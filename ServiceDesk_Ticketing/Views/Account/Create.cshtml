@model SysUser
@{
    ViewData["Title"] = "Add Account";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2>Create New Account for New Users</h2>
        </div>
        <div class="card-body p-4">
            <div class="mb-4">
                <a href="@Url.Action("Users", "Account")" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>
            <form asp-controller="Account" asp-action="Create" method="post">
                <div class="mb-4">
                    <label class="form-label fw-bold">User Role</label>
                    <div class="btn-group w-100" role="group" aria-label="User Role">
                        <input type="radio" class="btn-check" asp-for="User_Role_Name" value="Staff" id="Staff" autocomplete="off">
                        <label class="btn btn-outline-primary user-role-btn" for="Staff">Staff</label>

                        <input type="radio" class="btn-check" asp-for="User_Role_Name" value="School Leader" id="SchoolLeader" autocomplete="off">
                        <label class="btn btn-outline-primary user-role-btn" for="SchoolLeader">School Leader</label>

                        <input type="radio" class="btn-check" asp-for="User_Role_Name" value="ICT Team" id="ICT_Team" autocomplete="off">
                        <label class="btn btn-outline-primary user-role-btn" for="ICT_Team">ICT Team</label>
                    </div>
                    <span asp-validation-for="User_Role_Name" class="text-danger"></span>
                </div>

                <div class="mb-4 form-floating">
                    <input asp-for="FullName" class="form-control" placeholder="Full Name" />
                    <label asp-for="FullName">Full Name</label>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-4 form-floating">
                    <input asp-for="IC_num" class="form-control" placeholder="NRIC Number" />
                    <label asp-for="IC_num">NRIC Number</label>
                    <span asp-validation-for="IC_num" class="text-danger"></span>
                </div>

                <div class="mb-4 form-floating">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-4 form-floating">
                    <input asp-for="EmailAddress" class="form-control" placeholder="Email Address" />
                    <label asp-for="EmailAddress">Email Address</label>
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>

                <div class="mb-4 form-floating">
                    <input asp-for="UserPw" type="password" class="form-control" placeholder="Password" />
                    <label asp-for="UserPw">Password</label>
                    <span asp-validation-for="UserPw" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary btn-lg" type="submit">Register</button>
                </div>

                @if (ViewData["Message"] != null)
                {
                    <div class="alert alert-@ViewData["MsgType"] mt-4">
                        <strong>Message: </strong>@ViewData["Message"]<br />
                        @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                        {
                            <strong>SQL: </strong>
                            @ViewData["ExecSQL"]?.ToString()
                        }
                    </div>
                }
            </form>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
    }

    .container {
        margin-top: 2rem;
    }

    .card {
        border: none;
        border-radius: 0.5rem;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0;
    }

    .user-role-btn {
        transition: all 0.3s ease;
    }

        .user-role-btn:hover, .btn-check:checked + .user-role-btn {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .btn-lg {
        padding: 0.75rem 1.25rem;
        font-size: 1.25rem;
        line-height: 1.5;
        border-radius: 0.3rem;
    }

    .bi-arrow-left {
        margin-right: 0.5rem;
    }

    .form-label {
        font-weight: 600;
    }

    .form-control, .form-floating {
        border-radius: 0.3rem;
        box-shadow: none;
        transition: box-shadow 0.3s ease;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }

    .alert {
        border-radius: 0.3rem;
    }
</style>

<!-- Include Bootstrap Icons if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
