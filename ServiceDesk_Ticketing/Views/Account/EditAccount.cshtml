@using System.Security.Claims
@model SysUser

<div class="mt-4">
    <a href="@Url.Action("Users", "Account")" class="btn btn-secondary btn-lg">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg" style="max-width: 600px; width: 100%;">
        <div class="card-header bg-primary text-white text-center">
            <h2>Edit User Account</h2>
        </div>
        <div class="card-body">
            <form asp-controller="Account"
                  asp-action="EditAccount"
                  method="post">

                <input asp-for="User_ID" hidden />

                <!-- Full Name (Readonly) -->
                <div class="mb-3 form-floating">
                    <input asp-for="FullName" class="form-control" placeholder="" readonly />
                    <label asp-for="FullName">Full Name:</label>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- NRIC Number (Readonly) -->
                <div class="mb-3 form-floating">
                    <input asp-for="IC_num" class="form-control" placeholder="" readonly />
                    <label asp-for="IC_num">NRIC Number:</label>
                    <span asp-validation-for="IC_num" class="text-danger"></span>
                </div>

                <!-- Email Address (Readonly) -->
                <div class="mb-3 form-floating">
                    <input asp-for="EmailAddress" class="form-control" placeholder="" readonly />
                    <label asp-for="EmailAddress">Email Address:</label>
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>

                <!-- User Role (Editable) -->
                <div class="mb-3">
                    <label class="form-label fw-bold">User Role</label>
                    <div class="btn-group w-100" role="group" aria-label="User Role">
                        <input type="radio" class="btn-check" asp-for="User_Role_Name" value="Staff" id="Staff" autocomplete="off">
                        <label class="btn btn-outline-primary user-role-btn" for="Staff">Staff</label>

                        <input type="radio" class="btn-check" asp-for="User_Role_Name" value="School Leader" id="SchoolLeader" autocomplete="off">
                        <label class="btn btn-outline-primary user-role-btn" for="SchoolLeader">School Leader</label>

                        <input type="radio" class="btn-check" asp-for="User_Role_Name" value="ICT Team" id="ICT_Team" autocomplete="off">
                        <label class="btn btn-outline-primary user-role-btn" for="ICT_Team">ICT Team</label>
                    </div>
                    <span asp-validation-for="User_Role_Name" class="text-danger"></span>
                </div>

                <!-- Phone Number (Editable) -->
                <div class="mb-3 form-floating">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="" />
                    <label asp-for="PhoneNumber">Phone Number:</label>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid mb-3">
                    <button class="btn btn-primary btn-lg" type="submit">Update</button>
                </div>

                @if (ViewData["Message"] != null)
                {
                    <div class="alert alert-@ViewData["MsgType"] mt-4">
                        @ViewData["Message"]
                    </div>
                }
            </form>
        </div>
    </div>
</div>

<style>
    .user-role-btn {
        transition: all 0.3s ease;
    }

        .user-role-btn:hover, .btn-check:checked + .user-role-btn {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .btn-lg {
        padding: 0.75rem 1.25rem;
        font-size: 1.25rem;
        line-height: 1.5;
        border-radius: 0.3rem;
    }

    .card {
        border-radius: 0.5rem;
        box-shadow: 0 0 0 0.1rem rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0;
    }

    .card-body {
        padding: 2rem;
    }

    .form-label {
        font-weight: 600;
    }

    .form-control, .form-floating {
        border-radius: 0.3rem;
        box-shadow: none;
        transition: box-shadow 0.3s ease;
    }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }

    .alert {
        border-radius: 0.3rem;
    }
</style>

<!-- Include Bootstrap Icons if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
