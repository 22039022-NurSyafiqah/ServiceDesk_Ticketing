@model List<SysUser>
@{
    ViewData["Title"] = "Manage Account";
}
@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#jsUsersTable').DataTable({
                lengthMenu: [[5, -1], [5, "All"]],
                searching: true
            });
        });
    </script>
}


<div class="my-3">
    <h2 style="font-family: 'Times New Roman', Times, serif;">Manage Account</h2>
</div>


<div class="my-3">
    <a class="btn btn-primary" asp-controller="Account" asp-action="Create">Create New Account</a>
</div>


@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}
<div class="table-responsive">
    <table id="jsUsersTable" class="table table-striped table-bordered table-hover" style="padding-top: 20px;">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Full Name</th>
                <th>User Role</th>
                <th>Email Address</th>
                <th>Last Login</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.User_ID</td>
                    <td>@user.FullName</td>
                    <td>@user.User_Role_Name</td>
                    <td>@user.EmailAddress</td>
                    <td>@String.Format("{0:yyyy-MM-dd hh:mm:ss}", user.LastLogin)</td>
                    <td>
                        <a asp-controller="Account"
                       asp-action="EditAccount"
                       asp-route-id="@user.User_ID">Edit</a>
                        |
                        <a asp-controller="Account" asp-action="Delete"
                       asp-route-id="@user.User_ID"
                           onclick="return confirm('Delete User [@user.FullName]?')">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
