@model ServiceDesk_Ticketing.Models.Home

@{
    ViewData["Title"] = "Account Activation for New Staff";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            display: flex;
            flex-direction: column;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px auto;
            width: 90%;
            max-width: 1200px;
            overflow-y: auto;
            flex: 1;
        }

        .form-label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-check-label {
            margin-left: 5px;
        }

        .btn-primary {
            background-color: #ff6f61;
            border: none;
            color: white;
            padding: 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #ff5a4c;
            }

        .text-center {
            text-align: center;
        }

        .mt-4 {
            margin-top: 20px;
        }

        .mt-5 {
            margin-top: 40px;
        }

        .mb-3 {
            margin-bottom: 15px;
        }

        .mb-4 {
            margin-bottom: 20px;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h3>IT Service/Support Request Session</h3>
        </div>

        <div class="text-center mb-4">
            <h4>Account Activation for New Staff</h4>
        </div>
        <form asp-action="SubmitAccountActivation" method="post">
            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name:</label>
                <input asp-for="FullName" class="form-control" placeholder="Type here...">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nric" class="form-label">NRIC:</label>
                <input asp-for="Nric" class="form-control" placeholder="Type here...">
                <span asp-validation-for="Nric" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="EmploymentType" class="form-label">Employment Type:</label>
                <select asp-for="EmploymentType" class="form-select">
                    <option value="">Select</option>
                    <option value="EO">EO</option>
                    <option value="EAS">EAS</option>
                    <option value="RT">RT</option>
                    <option value="CAJT">CAJT</option>
                    <option value="FAJT">FAJT</option>
                    <option value="SL">SL</option>
                    <option value="MK">MK</option>
                    <option value="Support">Support</option>
                </select>
                <span asp-validation-for="EmploymentType" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="AppRequired" class="form-label">App Required:</label>
                <select asp-for="AppRequired" class="form-select">
                    <option value="">Select</option>
                    <option value="CES">CES</option>
                    <option value="ICON">ICON</option>
                    <option value="VPN">VPN</option>
                    <option value="SLS">SLS</option>
                    <option value="ScMobile">ScMobile</option>
                    <option value="RBS">RBS</option>
                </select>
                <span asp-validation-for="AppRequired" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="StartDate" class="form-label">Start Date:</label>
                <input asp-for="StartDate" class="form-control">
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Home")" style="display: inline-block; margin-top: 20px;">Back to Create Ticket</a>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
