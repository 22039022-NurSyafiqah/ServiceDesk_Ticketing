@{
    ViewData["Title"] = "IT Service/Support Request Session";
}
<div class="container mt-5">
    <div class="text-center mb-4">
        <h3>IT Service/Support Request Session</h3>
    </div>
    <div class="text-center mb-4">
        <h4>App/Software Installation</h4>
    </div>

    <div class="mb-3">
        <label class="form-label">Installation Type:</label>
        <div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="installationType" id="installationType1" value="App Installation on iPad" onclick="showForm('appInstallationForm')">
                <label class="form-check-label" for="installationType1">App Installation on iPad</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="installationType" id="installationType2" value="Software Installation on SSOE devices" onclick="showForm('softwareInstallationForm')">
                <label class="form-check-label" for="installationType2">Software Installation on SSOE devices</label>
            </div>
        </div>
    </div>

    <!-- App Installation on iPad Form -->
    <div id="appInstallationForm" style="display:none;">
        <form>
            <div class="mb-3">
                <label for="applicationName" class="form-label">Application Name:</label>
                <input type="text" id="applicationName" name="applicationName" class="form-control" placeholder="Type here...">
            </div>
            <div class="mb-3">
                <label class="form-label">Subscription Type:</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="subscriptionType1" name="subscriptionType" value="Free">
                        <label class="form-check-label" for="subscriptionType1">Free</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="subscriptionType2" name="subscriptionType" value="Paid">
                        <label class="form-check-label" for="subscriptionType2">Paid</label>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="paidAmount" class="form-label">If paid, how much?:</label>
                <input type="text" id="paidAmount" name="paidAmount" class="form-control" placeholder="Type here...">
            </div>
            <div class="mb-3">
                <label for="quantity" class="form-label">Qty:</label>
                <input type="text" id="quantity" name="quantity" class="form-control" placeholder="Type here...">
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
    </div>

    <!-- Software Installation on SSOE Devices Form -->
    <div id="softwareInstallationForm" style="display:none;">
        <form>
            <div class="mb-3">
                <label for="softwareName" class="form-label">Software Name:</label>
                <input type="text" id="softwareName" name="softwareName" class="form-control" placeholder="Type here...">
            </div>
            <div class="mb-3">
                <label class="form-label">Subscription Type:</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="subscriptionType3" name="subscriptionType" value="Free">
                        <label class="form-check-label" for="subscriptionType3">Free</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" id="subscriptionType4" name="subscriptionType" value="Paid">
                        <label class="form-check-label" for="subscriptionType4">Paid</label>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="paidAmount2" class="form-label">If paid, how much?:</label>
                <input type="text" id="paidAmount2" name="paidAmount2" class="form-control" placeholder="Type here...">
            </div>
            <div class="mb-3">
                <label for="purposeOfInstallation" class="form-label">Purpose of Installation:</label>
                <input type="text" id="purposeOfInstallation" name="purposeOfInstallation" class="form-control" placeholder="Type here...">
            </div>
            <div class="mb-3">
                <label class="form-label">Where to install:</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="whereToInstall1" name="whereToInstall" value="G1">
                        <label class="form-check-label" for="whereToInstall1">G1</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="whereToInstall2" name="whereToInstall" value="G2">
                        <label class="form-check-label" for="whereToInstall2">G2</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="whereToInstall3" name="whereToInstall" value="G3">
                        <label class="form-check-label" for="whereToInstall3">G3</label>
                    </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="implementationDate" class="form-label">Implementation Date:</label>
                <input type="date" id="implementationDate" name="implementationDate" class="form-control">
            </div>
            <div class="mb-3">
                <label for="uploadSoftware" class="form-label">Upload Software here:</label>
                <input type="text" id="uploadSoftware" name="uploadSoftware" class="form-control" placeholder="Link form">
            </div>
            <div class="mb-3">
                <label for="manualGuide" class="form-label">Manual guide:</label>
                <input type="text" id="manualGuide" name="manualGuide" class="form-control" placeholder="Link form">
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
    </div>

    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" style="display: inline-block; margin-top: 20px;">Back to Create Ticket</a>
    </div>
</div>

<script>
    function showForm(formId) {
        document.getElementById('appInstallationForm').style.display = 'none';
        document.getElementById('softwareInstallationForm').style.display = 'none';

        document.getElementById(formId).style.display = 'block';
    }
</script>
