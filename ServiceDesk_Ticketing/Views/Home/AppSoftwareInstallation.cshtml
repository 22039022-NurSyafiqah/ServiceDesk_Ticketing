@model ServiceDesk_Ticketing.Models.Home

@{
    ViewData["Title"] = "IT Service/Support Request Session";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            display: flex;
            flex-direction: column;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px auto;
            width: 90%;
            max-width: 1200px;
            overflow-y: auto;
            flex: 1;
        }

        .form-label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-check-label {
            margin-left: 5px;
        }

        .btn-primary {
            background-color: #ff6f61;
            border: none;
            color: white;
            padding: 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #ff5a4c;
            }

        .text-center {
            text-align: center;
        }

        .mt-4 {
            margin-top: 20px;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h3>IT Service/Support Request Session</h3>
        </div>
        <div class="text-center mb-4">
            <h4>Appilication / Software Installation</h4>
        </div>

        <div class="mb-3">
            <label class="form-label">Installation Type:</label>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="InstallationType" id="installationType1" value="App Installation on iPad" onclick="showForm('appInstallationForm')">
                    <label class="form-check-label" for="installationType1">Appilcation Installation on iPad</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="InstallationType" id="installationType2" value="Software Installation on SSOE devices" onclick="showForm('softwareInstallationForm')">
                    <label class="form-check-label" for="installationType2">Software Installation on SSOE devices</label>
                </div>
            </div>
        </div>

        <!-- App Installation on iPad Form -->
        <div id="appInstallationForm" style="display:none;">
            <form asp-action="SubmitAppInstallation" asp-conntroller="Home" method="post">
                <div class="mb-3">
                    <label asp-for="ApplicationName" class="form-label">Application Name:</label>
                    <input asp-for="ApplicationName" class="form-control" placeholder="Type here...">
                    <span asp-validation-for="ApplicationName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Subscription Type:</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="FreeSubscription" name="SubscriptionType" value="Free">
                            <label class="form-check-label" for="FreeSubscription">Free</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="PaidSubscription" name="SubscriptionType" value="Paid">
                            <label class="form-check-label" for="PaidSubscription">Paid</label>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="PaidAmount" class="form-label">If paid, how much?:</label>
                    <input asp-for="PaidAmount" class="form-control" placeholder="Type here...">
                    <span asp-validation-for="PaidAmount" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="AppQuantity" class="form-label">Quantity:</label>
                    <input asp-for="AppQuantity" class="form-control" placeholder="Type here...">
                    <span asp-validation-for="AppQuantity" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>

        <!-- Software Installation on SSOE Devices Form -->
        <div id="softwareInstallationForm" style="display:none;">
            <form asp-action="SubmitSoftwareInstallation" asp-contoller="Home" method="post">
                <div class="mb-3">
                    <label asp-for="SoftwareName" class="form-label">Software Name:</label>
                    <input asp-for="SoftwareName" class="form-control" placeholder="Type here...">
                    <span asp-validation-for="SoftwareName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Subscription Type:</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="FreeSubscription" name="SubscriptionType" value="Free">
                            <label class="form-check-label" for="FreeSubscription">Free</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" id="PaidSubscription" name="SubscriptionType" value="Paid">
                            <label class="form-check-label" for="PaidSubscription">Paid</label>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="PaidAmount2" class="form-label">If paid, how much?:</label>
                    <input asp-for="PaidAmount2" class="form-control" placeholder="Type here...">
                    <span asp-validation-for="PaidAmount2" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PurposeOfInstallation" class="form-label">Purpose of Installation:</label>
                    <input asp-for="PurposeOfInstallation" class="form-control" placeholder="Type here...">
                    <span asp-validation-for="PurposeOfInstallation" class="text-danger"></span>
                </div>
                <div class="mb-3 where-to-install">
                    <label class="form-label">Where to install:</label>
                    <div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="WhereToInstall" value="G1">
                            <label class="form-check-label" for="whereToInstall1">G1</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="WhereToInstall" value="G2">
                            <label class="form-check-label" for="whereToInstall2">G2</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" asp-for="WhereToInstall" value="G3">
                            <label class="form-check-label" for="whereToInstall3">G3</label>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="ImplementationDate" class="form-label">Implementation Date:</label>
                    <input asp-for="ImplementationDate" class="form-control">
                    <span asp-validation-for="ImplementationDate" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UploadSoftware" class="form-label">Upload Software here:</label>
                    <input asp-for="UploadSoftware" class="form-control" placeholder="Link form">
                    <span asp-validation-for="UploadSoftware" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ManualGuide" class="form-label">Manual guide:</label>
                    <input asp-for="ManualGuide" class="form-control" placeholder="Link form">
                    <span asp-validation-for="ManualGuide" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("CreateTicket", "TicketRequest")" style="display: inline-block; margin-top: 20px;">Back to Create Ticket</a>
        </div>
    </div>

    <script>
        function showForm(formId) {
            document.getElementById('appInstallationForm').style.display = 'none';
            document.getElementById('softwareInstallationForm').style.display = 'none';
            document.getElementById(formId).style.display = 'block';
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
