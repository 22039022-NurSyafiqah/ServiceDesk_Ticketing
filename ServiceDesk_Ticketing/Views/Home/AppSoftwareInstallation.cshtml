<div class="container mt-5">
    <div class="text-center mb-4">
        <h3>IT Service/Support Request Session</h3>
    </div>
    <div class="text-center mb-4">
        <a href="@Url.Action("PrintingQuota", "Home")" class="btn btn-primary btn-lg mx-1">Printing Quota</a>
        <a href="@Url.Action("AppSoftwareInstallation", "Home")" class="btn btn-primary btn-lg mx-1">App/Software Installation</a>
        <a href="@Url.Action("EventSupport", "Home")" class="btn btn-primary btn-lg mx-1">Event Support</a>
        <a href="@Url.Action("AccountActivation", "Home")" class="btn btn-primary btn-lg mx-1">Account Activation</a>
        <a href="@Url.Action("RequestForEquipment", "Home")" class="btn btn-primary btn-lg mx-1">Request for Equipment</a>
    </div>
    <div class="text-center mb-4">
        <h4>App/Software Installation</h4>
    </div>
    <form>
        <div class="mb-3">
            <label class="form-label">Installation Type:</label>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="installationType" id="installationType1" value="App Installation on iPad">
                    <label class="form-check-label" for="installationType1">App Installation on iPad</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="installationType" id="installationType2" value="Software Installation on SSOE devices">
                    <label class="form-check-label" for="installationType2">Software Installation on SSOE devices</label>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="applicationName" class="form-label">Application Name:</label>
            <input type="text" id="applicationName" name="applicationName" class="form-control" placeholder="Type here...">
        </div>
        <div class="mb-3">
            <label class="form-label">Subscription Type:</label>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="subscriptionType1" name="subscriptionType" value="Free">
                    <label class="form-check-label" for="subscriptionType1">Free</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="subscriptionType2" name="subscriptionType" value="Paid">
                    <label class="form-check-label" for="subscriptionType2">Paid</label>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="paidAmount" class="form-label">If paid, how much?:</label>
            <input type="text" id="paidAmount" name="paidAmount" class="form-control" placeholder="Type here...">
        </div>
        <div class="mb-3">
            <label for="quantity" class="form-label">Qty:</label>
            <input type="text" id="quantity" name="quantity" class="form-control" placeholder="Type here...">
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
    <div class="text-center mt-4">
        <a href="@Url.Action("ITServiceSupportRequest", "Home")" style="display: inline-block; margin-top: 20px;">Back to Home</a>
    </div>
</div>

