@model ServiceDesk_Ticketing.Models.Home

@{
    ViewData["Title"] = "Fault Reporting Session: Classroom/Cart Parking Bay";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            display: flex;
            flex-direction: column;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px auto;
            width: 90%;
            max-width: 1200px;
            overflow-y: auto;
            flex: 1;
        }

        .form-label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-check-label {
            margin-left: 5px;
        }

        .btn-primary {
            background-color: #ff6f61;
            border: none;
            color: white;
            padding: 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #ff5a4c;
            }

        .text-center {
            text-align: center;
        }

        .mt-4 {
            margin-top: 20px;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center mb-4">
            <h3>Fault Reporting Session: Classroom/Cart Parking Bay</h3>
        </div>
        <form asp-action="SubmitClassroomCartParkingBay" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description of Issue:</label>
                <textarea asp-for="Description" class="form-control" placeholder="Type here..." rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DateOfIssue" class="form-label">Date of Issue:</label>
                <input asp-for="DateOfIssue" class="form-control">
                <span asp-validation-for="DateOfIssue" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TimeOfIssue" class="form-label">Time of Issue:</label>
                <input asp-for="TimeOfIssue" class="form-control">
                <span asp-validation-for="TimeOfIssue" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Venue" class="form-label">Venue of Issue:</label>
                <input asp-for="Venue" class="form-control" placeholder="Type here...">
                <span asp-validation-for="Venue" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Photo" class="form-label">Any Photo URL:</label>
                <input asp-for="Photo" type="file" class="form-control mb-2">
                <span asp-validation-for="Photo" class="text-danger"></span>
                
            </div>
            <div class="mb-3">
                <label class="form-label">Equipment Type:</label>
                <div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedEquipment" value="Projector/Patch Panel">
                        <label class="form-check-label" for="projector">Projector/Patch Panel</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedEquipment" value="Visualizers">
                        <label class="form-check-label" for="visualizers">Visualizers</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedEquipment" value="Laptop">
                        <label class="form-check-label" for="laptop">Laptop</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedEquipment" value="iPad">
                        <label class="form-check-label" for="ipad">iPad</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="SelectedEquipment" value="Apple TV">
                        <label class="form-check-label" for="appleTv">Apple TV</label>
                    </div>
                </div>
                <span asp-validation-for="EquipmentType" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Home")" style="display: inline-block; margin-top: 20px;">Back to Create Ticket</a>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
