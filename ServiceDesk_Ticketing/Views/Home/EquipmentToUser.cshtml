@{
    ViewData["Title"] = "Equipment to User";
}
<!-- Fault Reporting Session: Equipment to User -->


<div class="container mt-5">
    <div class="text-center mb-4">
        <h3>Fault Reporting Session: Equipment to User</h3>
    </div>
    <form>
        <div class="mb-3">
            <label for="description" class="form-label">Description of Issue:</label>
            <textarea id="description" name="description" class="form-control" placeholder="Type here..." rows="5"></textarea>
        </div>
        <div class="mb-3">
            <label for="date" class="form-label">Date of Issue:</label>
            <input type="date" id="date" name="date" class="form-control" placeholder="Type here...">
        </div>
        <div class="mb-3">
            <label for="time" class="form-label">Time of Issue:</label>
            <input type="time" id="time" name="time" class="form-control" placeholder="Type here...">
        </div>
        <div class="mb-3">
            <label class="form-label">Any Photo URL:</label>
            <div>
                <input type="file" id="photo" name="photo" class="form-control mb-2">
               
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Equipment Type:</label>
            <div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="laptop" name="equipmentType" value="Laptop">
                    <label class="form-check-label" for="laptop">Laptop</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="ipad" name="equipmentType" value="iPad">
                    <label class="form-check-label" for="ipad">iPad</label>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" style="display: inline-block; margin-top: 20px;">Back to Create Ticket</a>
    </div>
</div>
