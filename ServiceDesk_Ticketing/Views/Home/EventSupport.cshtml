<div class="container mt-5">
    <div class="text-center mb-4">
        <h3>IT Service/Support Request Session</h3>
    </div>
    <div class="text-center mb-4">
        <a href="@Url.Action("PrintingQuota", "Home")" class="btn btn-primary btn-lg mx-1">Printing Quota</a>
        <a href="@Url.Action("AppSoftwareInstallation", "Home")" class="btn btn-primary btn-lg mx-1">App/Software Installation</a>
        <a href="@Url.Action("EventSupport", "Home")" class="btn btn-primary btn-lg mx-1">Event Support</a>
        <a href="@Url.Action("AccountActivation", "Home")" class="btn btn-primary btn-lg mx-1">Account Activation</a>
        <a href="@Url.Action("RequestForEquipment", "Home")" class="btn btn-primary btn-lg mx-1">Request for Equipment</a>
    </div>
    <div class="text-center mb-4">
        <h4>Event/ICT Support</h4>
    </div>
    <form>
        <div class="mb-3">
            <label class="form-label">Support Type:</label>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="supportType" id="supportType1" value="Event (Media/AV)">
                    <label class="form-check-label" for="supportType1">Event (Media/AV)</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="supportType" id="supportType2" value="ICT">
                    <label class="form-check-label" for="supportType2">ICT</label>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Event Support Type:</label>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="eventSupportType1" name="eventSupportType" value="Photography">
                    <label class="form-check-label" for="eventSupportType1">Photography</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="eventSupportType2" name="eventSupportType" value="Videography">
                    <label class="form-check-label" for="eventSupportType2">Videography</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="eventSupportType3" name="eventSupportType" value="Hall AV Support">
                    <label class="form-check-label" for="eventSupportType3">Hall AV Support</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="eventSupportType4" name="eventSupportType" value="Live Stream">
                    <label class="form-check-label" for="eventSupportType4">Live Stream</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="eventSupportType5" name="eventSupportType" value="Excursion">
                    <label class="form-check-label" for="eventSupportType5">Excursion</label>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">What kind of photo you want to capture? (closeup/long/short/wide shot). Please Describe:</label>
            <textarea id="photoDescription" name="photoDescription" class="form-control" placeholder="Type here..."></textarea>
        </div>
        <div class="mb-3">
            <label for="eventName" class="form-label">Name of Event:</label>
            <input type="text" id="eventName" name="eventName" class="form-control" placeholder="Type here...">
        </div>
        <div class="mb-3">
            <label for="eventDate" class="form-label">Date of Event:</label>
            <input type="date" id="eventDate" name="eventDate" class="form-control">
        </div>
        <div class="mb-3">
            <label for="eventTime" class="form-label">Time of Event:</label>
            <input type="time" id="eventTime" name="eventTime" class="form-control" placeholder="Type here...">
        </div>
        <div class="mb-3">
            <label for="eventIncharge" class="form-label">Event Incharge:</label>
            <input type="text" id="eventIncharge" name="eventIncharge" class="form-control" placeholder="Type here...">
        </div>
        <div class="mb-3">
            <label class="form-label">Any Rehearsal?</label>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rehearsal" id="rehearsalYes" value="Yes">
                    <label class="form-check-label" for="rehearsalYes">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="rehearsal" id="rehearsalNo" value="No">
                    <label class="form-check-label" for="rehearsalNo">No</label>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="rehearsalDate" class="form-label">Date of Rehearsal:</label>
            <input type="date" id="rehearsalDate" name="rehearsalDate" class="form-control">
        </div>
        <div class="mb-3">
            <label for="rehearsalTime" class="form-label">Time of Rehearsal:</label>
            <input type="time" id="rehearsalTime" name="rehearsalTime" class="form-control" placeholder="Type here...">
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" style="display: inline-block; margin-top: 20px;">Back to Home</a>
    </div>
</div>
