@{
    ViewData["Title"] = "FacebookPost";
}
<!-- Facebook Post Session Section -->
<div class="container mt-5">
    <div class="text-center mb-4">
        <h3>Facebook Post Session</h3>
    </div>
    <form>
        <div class="mb-3">
            <label for="photos" class="form-label">Select your pictures (max 15):</label>
            <input type="file" id="photos" name="photos" class="form-control" multiple>
        </div>
        <div class="mb-3">
            <label for="caption" class="form-label">Caption for each photo:</label>
            <input type="text" id="caption" name="caption" class="form-control" placeholder="Type here...">
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" style="display: inline-block; margin-top: 20px;">Back to Create Ticket</a>
    </div>
</div>
