@using System.Security.Claims
<!--<a asp-controller="Home" asp-action="Index">Home</a>-->
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Reference your stylesheet -->
    <style>
        .home-container {
            text-align: center;
            margin-top: 30px;
        }

            .home-container h1 {
                font-size: 2em;
                margin-bottom: 20px;
            }

            .home-container button {
                margin: 10px;
                padding: 15px 30px;
                font-size: 16px;
                cursor: pointer;
            }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
            border-radius: 5px;
        }

        p {
            font-family: Verdana;
            text-align: left;
        }
    </style>
</head>

    <body>
        <div class="home-container">

        <p>Welcome, @User.Identity!.Name!</p>
        <p>You logged in as @User.FindFirst(ClaimTypes.Role)?.Value.</p>

    @if (User.IsInRole("ICT Team"))  {

        // Need re-code. So that when user select the option, it'll record down in Database
        <button class="btn-primary" onclick="location.href='@Url.Action("Index", "Home")'">Create Tickets</button>
        <button class="btn-primary" onclick="location.href='@Url.Action("Privacy", "Home")'">Track Issue</button>
        <button class="btn-primary" onclick="location.href='@Url.Action("Privacy", "Home")'">Search Tickets</button>
        <button class="btn-primary" onclick="location.href='@Url.Action("Privacy", "Home")'">Generate Report</button>
        <button class="btn-primary" onclick="location.href='@Url.Action("Privacy", "Home")'">View Tickets</button>
    }
    else if (User.IsInRole("School Leader"))
    {
            // Need re-code. So that when user select the option, it'll record down in Database
            <button class="btn-primary" onclick="location.href='@Url.Action("Index", "Home")'">Create Tickets</button>
            <button class="btn-primary" onclick="location.href='@Url.Action("Privacy", "Home")'">Track Issue</button>
            <button class="btn-primary" onclick="location.href='@Url.Action("Privacy", "Home")'">Generate Report</button>

    } else
        {
            // Need re-code. So that when user select the option, it'll record down in Database
            <button class="btn-primary" onclick="location.href='@Url.Action("Index", "Home")'">Create Tickets</button>
            <button class="btn-primary" onclick="location.href='@Url.Action("Privacy", "Home")'">Track Issue</button>
        }

    </div>


    </body>


</html>

