@model ServiceDesk_Ticketing.Models.Home

@{
    ViewData["Title"] = "Printing Quota";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            display: flex;
            flex-direction: column;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 20px auto;
            width: 90%;
            max-width: 1200px;
            overflow-y: auto;
            flex: 1;
        }

        .form-label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-check-label {
            margin-left: 5px;
        }

        .btn-primary {
            background-color: #ff6f61;
            border: none;
            color: white;
            padding: 15px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #ff5a4c;
            }

        .text-center {
            text-align: center;
        }

        .mt-4 {
            margin-top: 20px;
        }

        .mt-5 {
            margin-top: 40px;
        }

        .mb-3 {
            margin-bottom: 15px;
        }

        .mb-4 {
            margin-bottom: 20px;
        }

        .form-check {
            display: inline-block;
            margin-right: 10px;
        }

        .form-check-input {
            margin-right: 5px;
        }

        .w-100 {
            width: 100%;
        }

        .text-danger {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h3>IT Service/Support Request Session</h3>
        </div>

        <div class="text-center mb-4">
            <h4>Printing Quota</h4>
        </div>

        <form asp-action="SubmitPrintingQuota" asp-controller="Home" method="post">
            <div class="mb-3">
                <label asp-for="ICNum" class="form-label">IC num:</label>
                <input asp-for="ICNum" class="form-control" placeholder="Type here...">
                <span asp-validation-for="ICNum" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IncreaseQty" class="form-label">Increase Qty:</label>
                <input asp-for="IncreaseQty" class="form-control" placeholder="Type here...">
                <span asp-validation-for="IncreaseQty" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ReasonForIncrease" class="form-label">Reason for increase:</label>
                <input asp-for="ReasonForIncrease" class="form-control" placeholder="Type here...">
                <span asp-validation-for="ReasonForIncrease" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
        <div class="text-center mt-4">
            <a href="@Url.Action("CreateTicket", "TicketRequest")" style="display: inline-block; margin-top: 20px;">Back to Create Ticket</a>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
