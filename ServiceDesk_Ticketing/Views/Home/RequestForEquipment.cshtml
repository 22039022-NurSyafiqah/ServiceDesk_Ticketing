<div class="container mt-5">
    <div class="text-center mb-4">
        <h3>IT Service/Support Request Session</h3>
    </div>
    <div class="text-center mb-4">
        <a href="@Url.Action("PrintingQuota", "Home")" class="btn btn-primary btn-lg mx-1">Printing Quota</a>
        <a href="@Url.Action("AppSoftwareInstallation", "Home")" class="btn btn-primary btn-lg mx-1">App/Software Installation</a>
        <a href="@Url.Action("EventSupport", "Home")" class="btn btn-primary btn-lg mx-1">Event Support</a>
        <a href="@Url.Action("AccountActivation", "Home")" class="btn btn-primary btn-lg mx-1">Account Activation</a>
        <a href="@Url.Action("RequestForEquipment", "Home")" class="btn btn-primary btn-lg mx-1">Request for Equipment</a>
    </div>
    <div class="text-center mb-4">
        <h4>Request for Equipment</h4>
    </div>
    <form>
        <div class="mb-3">
            <label class="form-label">Equipment Selection:</label>
            <div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="equipmentSelection1" name="equipmentSelection" value="Visualizers">
                    <label class="form-check-label" for="equipmentSelection1">Visualizers</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="equipmentSelection2" name="equipmentSelection" value="Apple TV">
                    <label class="form-check-label" for="equipmentSelection2">Apple TV</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="equipmentSelection3" name="equipmentSelection" value="Monitor">
                    <label class="form-check-label" for="equipmentSelection3">Monitor</label>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <label for="quantity" class="form-label">Quantity:</label>
            <input type="text" id="quantity" name="quantity" class="form-control" placeholder="Type here...">
        </div>
        <div class="mb-3">
            <label for="venue" class="form-label">Venue:</label>
            <input type="text" id="venue" name="venue" class="form-control" placeholder="Type here...">
        </div>
        <div class="mb-3">
            <label for="reason" class="form-label">Reason for request:</label>
            <textarea id="reason" name="reason" class="form-control" placeholder="Type here..."></textarea>
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" style="display: inline-block; margin-top: 20px;">Back to Home</a>
    </div>
</div>
