@{
    ViewData["Title"] = "WebsiteUpdate";
}
<!-- Website Update Session Section -->

<div class="container mt-5">
    <div class="text-center mb-4">
        <h3>Website Update Session</h3>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="document" class="form-label">Select Document (Words/PPT):</label>
            <input type="file" id="document" name="document" class="form-control" multiple>
        </div>
        <div class="mb-3">
            <label for="urlLinks" class="form-label">Upload URL links to Update:</label>
            <input type="text" id="urlLinks" name="urlLinks" class="form-control" placeholder="Type here...">
        </div>
        <div class="mb-3">
            <label for="attachment" class="form-label">Any Attachment:</label>
            <input type="file" id="attachment" name="attachment" class="form-control">
        </div>
        <div class="mb-3">
            <label for="date" class="form-label">Date of Update:</label> 
            <input type="date" id="date" name="date" class="form-control" placeholder="Type here...">
        </div>
        <button type="submit" class="btn btn-primary w-100">Submit</button>
    </form>
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Home")" style="display: inline-block; margin-top: 20px;">Back to Create Ticket</a>
    </div>
</div>
