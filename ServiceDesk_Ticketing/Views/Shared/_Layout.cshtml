<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/theme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ServiceDesk_Ticketing.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css?v=1" />
    <script src="~/js/script.js?v=1"></script>
    <link rel="stylesheet" type="text/css" href="styles.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <style>
        body {
            background-image: url('@Url.Content("~/images/peachBG.jpg")');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center center;
        }
    </style>
</head>
<body>

    @if (User.Identity!.IsAuthenticated)
    {
        if (User.IsInRole("ICT Team"))
        {
            <partial name="ICTNavBar" />
        }
        else if (User.IsInRole("School Leader"))
        {
            <partial name="LeaderNavBar" />
        }
        else
        {
            <partial name="StaffNavBar" />
        }
    }
    else
    {
        <partial name="Guest" />
    }

    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("MoreScripts", required: false)
    @RenderSection("Scripts", required: false) <!-- Add this line -->

</body>
</html>

