<body>

        @if (User.Identity!.IsAuthenticated)
        {
            if (User.IsInRole("ICT Team"))
            {
                <partial name="ICTNavBar" />
            }
            else if (User.IsInRole("School Leader"))
            {
                <partial name="LeaderNavBar" />
            }
            else
            {
                <partial name="StaffNavBar" />
            }
        }
        else
        {
            <partial name="Guest" />
        }

        <div class="container">
            @RenderBody()
        </div>

