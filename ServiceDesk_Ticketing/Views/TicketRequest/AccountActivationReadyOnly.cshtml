@model Home

@{
    ViewData["Title"] = "View Ticket";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Account Activation Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">New Staff Name:</dt>
                        <dd class="col-sm-8">@Model.NewAcc_NewStaffName</dd>

                        <dt class="col-sm-4">New Staff NRIC: </dt>
                        <dd class="col-sm-8">@Model.NewAcc_NewStaffNRIC</dd>

                        <dt class="col-sm-4">Employment Type:</dt>
                        <dd class="col-sm-8">@Model.Emp_Type</dd>

                        <dt class="col-sm-4">Application Name:</dt>
                        <dd class="col-sm-8">@Model.AppName</dd>

                        <dt class="col-sm-4">New User Start Date:</dt>
                        <dd class="col-sm-8">@Model.NewAcc_StartDate.ToString("yyyy-MM-dd")</dd>

                    </dl>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("ListTickets", "TicketRequest")" class="btn btn-primary">
                        <i class="bi bi-arrow-left"></i> Back to Ticket List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card-header {
            border-bottom: 2px solid #007bff;
        }

        .card-body {
            background-color: #f8f9fa;
        }

        .card-footer {
            background-color: #f1f1f1;
        }
    </style>
}
